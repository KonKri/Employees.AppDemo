@model Employees.Mvc.Models.Employee

<div class="d-flex justify-content-center">
    <div>
        <h1 class="display-3">Edit Employee</h1>
        <p class="lead">Change employee's information if necessary.</p>
        <br />
        <form asp-action="@nameof(Employees.Mvc.Controllers.MVC.EmployeesController.Edit)" asp-route-id="@Model.Id" method="post" class="new-or-update-form">
            <div class="form-row form-group">
                <div class="col">
                    <input class="form-control" type="text" name="firstName" placeholder="Employee's First Name" value="@Model.FirstName" required/>
                </div>
                <div class="col">
                    <input class="form-control" type="text" name="lastName" placeholder="Employee's Last Name" value="@Model.LastName" required/>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col">
                    <input class="form-control" type="text" name="address" placeholder="Employee's Address" value="@Model.Address" required/>
                </div>
                <div class="col">
                    <input class="form-control" type="number" name="phoneNumber" placeholder="Employee's Phone Number" value="@Model.PhoneNumber" required/>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col">
                    <input class="form-control" type="text" name="specialty" placeholder="Employee's Specialty" value="@Model.Specialty" required/>
                </div>
            </div>
            <div class="form-row form-group">
                <div class="col">
                    <button type="submit" class="btn btn-success font-weight-bold">
                        <svg class="bi bi-arrow-repeat" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2.854 7.146a.5.5 0 00-.708 0l-2 2a.5.5 0 10.708.708L2.5 8.207l1.646 1.647a.5.5 0 00.708-.708l-2-2zm13-1a.5.5 0 00-.708 0L13.5 7.793l-1.646-1.647a.5.5 0 00-.708.708l2 2a.5.5 0 00.708 0l2-2a.5.5 0 000-.708z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M8 3a4.995 4.995 0 00-4.192 2.273.5.5 0 01-.837-.546A6 6 0 0114 8a.5.5 0 01-1.001 0 5 5 0 00-5-5zM2.5 7.5A.5.5 0 013 8a5 5 0 009.192 2.727.5.5 0 11.837.546A6 6 0 012 8a.5.5 0 01.501-.5z" clip-rule="evenodd" />
                        </svg>
                        Update Info
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>